;;; 16
(define-test (interactive-distinctive b1 b2)
  (=> (is-interactive (box-elt b1)) (viewable b1) (viewable b2)
      (not (is-interactive (box-elt b2)))
      (>= (color-distance (fg-color b1) (fg-color b2)) 0.1)))

